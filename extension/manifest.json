{
  "manifest_version": 3,
  "name": "XPostAgent",
  "version": "1.0.0",
  "description": "X (Twitter) への投稿を自動化する Chrome 拡張機能",

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://xpostagent-worker.menu-simulator.workers.dev/*"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "XPostAgent"
  },

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["lib/logger.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ]
}
